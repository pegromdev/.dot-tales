exec $nsi "sleep 2; $term2"  	 
# Vim server
exec $nsi "sleep 3; $term3 -e nvim"  	 
# tg
exec $nsi "sleep 4; $term4 -e tg"	
# Ranger
exec $nsi	"sleep 5; $term --class ranger -e ranger"

# Polkit
exec $nsi /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
# Wallpaper
exec $nsi feh --bg-scale ~/.config/wall.png
# Compositor
exec $nsi picom --experimental-backends --config .config/picom.conf -b && notify-send "Picom Started"
# clipboard Manager
exec $nsi clipit
# I3 Lock
exec $nsi xautolock -time 30 -locker blurlock
# Sdcard Mounting
exec $nsi mountsd
# Playerctl daemon
exec $nsi playerctld daemon
# Kill tmux 0 session
exec $nsi 	"sleep 6; tmux kill-session -t 0"
# Keyboard Keys custom changes
exec_always $nsi	remaps
# Newsboat full sync
exec_always $nsi newsboat -x reload && notify-send "Newsboat sync done!"
# Mutt wizard sync
exec_always $nsi mw -Y && notify-send "Mail Sync done!"
# Desktop notifications
exec --no-startup-id dbus-launch dunst --config ~/.config/dunst/dunstrc

