[colors]
background = ${xrdb:background:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color3:#222}
primary = ${xrdb:color4:#222}
secondary = ${xrdb:color1:#222}
alert = ${xrdb:color7:#222}


[bar/top]
width = 100%
height = 22
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center =
modules-right = pulseaudio timer date 

tray-position = right
tray-padding = 2
wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |


[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = î€–
format-prefix-foreground = ${colors.foreground-alt}
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
interval = 5

format-volume = <ramp-volume> <label-volume>
ramp-volume-0 = ğŸ”ˆ
ramp-volume-1 = ğŸ”‰
ramp-volume-2 = ğŸ”Š
ramp-volume-foreground = ${colors.foreground}
format-muted = <label-muted>
label-muted = ğŸ”‡ muted
label-muted-foreground = $colors.foreground}
click-right = kitty --class pulsemixer -e pulsemixer

[module/timer]

type = custom/script
exec = /home/niko/.bin/apps/polybar/polybar-timer tail 'TIMER' 5
tail = true

click-left = /home/niko/.bin/apps/polybar/polybar-timer new 25 'Pomo session' 'notify-send "Session finished"' ; /path/to/polybar-timer.sh update %pid%
click-middle = /home/niko/.bin/apps/polybar/polybar-timer cancel ; /home/niko/.bin/apps/polybar/polybar-timer update %pid%
click-right = /home/niko/.bin/apps/polybar/polybar-timer new 5 'Pomo break' 'notify-send "Break finished"' ; /home/niko/.bin/apps/polybar/polybar-timer update %pid%
scroll-up = /home/niko/.bin/apps/polybar/polybar-timer increase 60 || /home/niko/.bin/apps/polybar/polybar-timer new 1 'TIMER:' 'notify-send -u critical "Timer expired."' ; /home/niko/.bin/apps/polybar/polybar-timer update %pid%
scroll-down = /home/niko/.bin/apps/polybar/polybar-timer increase -60 ; /home/niko/.bin/apps/polybar/polybar-timer update %pid%






